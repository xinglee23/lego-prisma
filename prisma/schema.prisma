generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ActivityTypeEnum {
  ACTIVITY_COMBO
  ACTIVITY_H5
  ACTIVITY_FORM
}

enum ShareSettingTypeEnum {
  ACTIVITY
  TEMPLATE
}

enum PosterSettingTypeEnum {
  ACTIVITY
  TEMPLATE
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userName  String
  userCname String
  activity  Activity[]
}

model Activity {
  activityId       String           @id @default(auto()) @map("_id") @db.ObjectId
  type             ActivityTypeEnum
  name             String
  activityShowName String
  source           String
  workStatus       String
  url              String
  secondWorkStatus String
  createTime       DateTime
  updateTime       DateTime
  validated        Boolean
  editPreset       Boolean?
  version          String?
  user             User?            @relation(fields: [userId], references: [id])
  userId           String?          @db.ObjectId
  templateConfig   Json
  componentList    ComponentList[]
}

model ComponentList {
  componentInstanceId String    @id @default(auto()) @map("_id") @db.ObjectId
  componentCode       String
  componentName       String
  Activity            Activity? @relation(fields: [componentActivityId], references: [activityId])
  componentActivityId String?   @db.ObjectId
}
